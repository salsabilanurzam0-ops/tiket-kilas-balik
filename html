    <script>
        // =============================================
        // KONFIGURASI
        // =============================================
        // ðŸ”§ GANTI URL INI DENGAN URL GOOGLE APPS SCRIPT ANDA
        const GOOGLE_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbxH2jSsRE3dPT9VvBhVRdlZsRWqHaJBeR9vb-z1sUZV5dLpWg-ZftlKfWOjEIifIbng/exec';
        
        const INSTAGRAM_HANDLE = '@kopi_basi';
        const INSTAGRAM_URL = 'https://instagram.com/kopi_basi';
        const HARGA_TIKET = 10000;
        const STORAGE_KEY = 'kbm_tickets';

        // =============================================
        // STATE MANAGEMENT
        // =============================================
        let selectedFile = null;
        let currentTicketData = null;
        let requiresProofUpload = false;
        let isProcessing = false;

        // =============================================
        // UTILITY FUNCTIONS
        // =============================================
        function formatRupiah(angka) {
            return 'Rp ' + angka.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }

        function generateTicketCode() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ0123456789';
            let code = 'KBM';
            for (let i = 0; i < 6; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return code;
        }

        function generateTicketId() {
            const date = new Date();
            const year = date.getFullYear();
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const day = date.getDate().toString().padStart(2, '0');
            const random = Math.floor(Math.random() * 10000).toString().padStart(4, '0');
            return `KBM${year}${month}${day}-${random}`;
        }

        function getPaymentMethodDisplay(method) {
            const methods = {
                'dana': 'Dana',
                'bca': 'Transfer Bank BCA',
                'ots': 'Bayar di Tempat (Cash)'
            };
            return methods[method] || 'Dana';
        }

        function showNotification(message, type = 'info') {
            // Remove existing notification
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();
            
            const notification = document.createElement('div');
            notification.className = `notification status-${type}`;
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 20px;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                z-index: 9999;
                font-family: 'Montserrat', sans-serif;
                font-weight: 600;
                font-size: 0.9rem;
                max-width: 300px;
                text-align: center;
                animation: fadeIn 0.3s ease;
                backdrop-filter: blur(5px);
            `;
            
            // Set background color based on type
            const colors = {
                success: { bg: 'rgba(40, 167, 69, 0.9)', color: '#fff' },
                error: { bg: 'rgba(255, 82, 82, 0.9)', color: '#fff' },
                warning: { bg: 'rgba(255, 193, 7, 0.9)', color: '#000' },
                info: { bg: 'rgba(212, 175, 55, 0.9)', color: '#000' }
            };
            
            const color = colors[type] || colors.info;
            notification.style.background = color.bg;
            notification.style.color = color.color;
            notification.style.border = `2px solid ${type === 'warning' ? '#ffc107' : '#d4af37'}`;
            
            notification.textContent = message;
            document.body.appendChild(notification);
            
            // Auto remove after 4 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateX(100px)';
                notification.style.transition = 'all 0.5s ease';
                
                setTimeout(() => {
                    notification.remove();
                }, 500);
            }, 4000);
        }

        // =============================================
        // LOADING FUNCTIONS
        // =============================================
        function showLoading(text = 'Memproses data...') {
            document.getElementById('loadingText').textContent = text;
            document.getElementById('loadingOverlay').classList.add('active');
            isProcessing = true;
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').classList.remove('active');
            isProcessing = false;
        }

        // =============================================
        // FILE HANDLING
        // =============================================
        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.readAsDataURL(file);
                reader.onload = () => resolve(reader.result);
                reader.onerror = error => reject(error);
            });
        }

        function handleFileSelect(file) {
            if (!file) return;
            
            // Validasi ukuran file (maks 5MB)
            const maxSize = 5 * 1024 * 1024;
            if (file.size > maxSize) {
                showNotification('Ukuran file terlalu besar! Maksimal 5MB.', 'error');
                return;
            }
            
            // Validasi tipe file
            const allowedTypes = ['image/jpeg', 'image/png', 'image/jpg'];
            if (!allowedTypes.includes(file.type)) {
                showNotification('Format file tidak didukung! Gunakan JPG atau PNG.', 'error');
                return;
            }
            
            selectedFile = file;
            
            // Update UI
            const fileName = file.name;
            const fileSize = (file.size / (1024 * 1024)).toFixed(2) + ' MB';
            
            document.getElementById('fileName').textContent = fileName;
            document.getElementById('fileSize').textContent = fileSize;
            document.getElementById('filePreviewContainer').classList.add('active');
            
            // Show preview in modal
            const reader = new FileReader();
            reader.onload = function(e) {
                const proofPreview = document.getElementById('proofPreview');
                proofPreview.innerHTML = `<img src="${e.target.result}" alt="Preview Bukti Pembayaran">`;
                proofPreview.classList.add('active');
            };
            reader.readAsDataURL(file);
            
            showNotification('File berhasil dipilih: ' + fileName, 'success');
        }

        // =============================================
        // DATA STORAGE (BACKUP SYSTEM)
        // =============================================
        function saveToLocalStorage(data) {
            try {
                const allTickets = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
                const ticketData = {
                    ...data,
                    storedAt: new Date().toISOString(),
                    localBackup: true,
                    backupId: Date.now()
                };
                
                allTickets.push(ticketData);
                localStorage.setItem(STORAGE_KEY, JSON.stringify(allTickets));
                localStorage.setItem(`kbm_ticket_${data.ticketCode}`, JSON.stringify(ticketData));
                
                console.log('âœ… Data tersimpan di localStorage:', data.ticketCode);
                return true;
            } catch (error) {
                console.error('âŒ Error saving to localStorage:', error);
                return false;
            }
        }

        function getBackupCount() {
            try {
                const data = localStorage.getItem(STORAGE_KEY);
                return data ? JSON.parse(data).length : 0;
            } catch {
                return 0;
            }
        }

        function showBackupData() {
            const count = getBackupCount();
            if (count > 0) {
                showNotification(`Ada ${count} data tersimpan di backup lokal.`, 'info');
            } else {
                showNotification('Tidak ada data backup.', 'warning');
            }
        }

        function clearAllData() {
            if (confirm('Yakin ingin menghapus semua data backup lokal?')) {
                localStorage.removeItem(STORAGE_KEY);
                showNotification('Semua data backup telah dihapus.', 'success');
            }
        }

        // =============================================
        // GOOGLE SHEETS INTEGRATION (WITH FALLBACK)
        // =============================================
        async function sendToGoogleSheets(data) {
            // Fallback: always save to localStorage first
            const savedToLocal = saveToLocalStorage(data);
            
            // Try to send to Google Sheets
            try {
                const payload = {
                    nama: data.nama,
                    telepon: data.telepon,
                    email: data.email,
                    tiket: parseInt(data.tiket) || 1,
                    total: data.total,
                    metode: data.metode || 'dana',
                    ticketCode: data.ticketCode,
                    ticketId: data.ticketId,
                    status: data.status || 'pending',
                    proofFile: data.proofFile || 'none',
                    timestamp: new Date().toISOString()
                };
                
                // Add file data if exists
                if (selectedFile) {
                    try {
                        const base64 = await fileToBase64(selectedFile);
                        payload.fileData = base64.split(',')[1];
                        payload.fileName = selectedFile.name;
                        payload.mimeType = selectedFile.type;
                    } catch (fileError) {
                        console.warn('âš ï¸ File conversion error:', fileError);
                    }
                }
                
                console.log('ðŸ“¤ Sending to Google Sheets:', payload);
                
                // Try with CORS first
                try {
                    const response = await fetch(GOOGLE_SCRIPT_URL, {
                        method: 'POST',
                        mode: 'cors',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    
                    if (response.ok) {
                        const result = await response.json();
                        console.log('âœ… Google Sheets response:', result);
                        
                        if (result.success) {
                            showNotification('âœ… Data berhasil dikirim ke server!', 'success');
                            return { success: true, message: 'Data tersimpan di Google Sheets', data: result };
                        }
                    }
                } catch (corsError) {
                    console.warn('âš ï¸ CORS error, trying no-cors mode:', corsError);
                    
                    // Fallback to no-cors mode
                    try {
                        await fetch(GOOGLE_SCRIPT_URL, {
                            method: 'POST',
                            mode: 'no-cors',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });
                        
                        console.log('ðŸ“¨ Data sent (no-cors mode)');
                        showNotification('ðŸ“¨ Data dikirim ke server (mode no-cors)', 'info');
                        return { success: true, message: 'Data dikirim (no-cors mode)' };
                        
                    } catch (noCorsError) {
                        console.error('âŒ Both CORS and no-cors failed:', noCorsError);
                        throw noCorsError;
                    }
                }
                
            } catch (error) {
                console.error('âŒ Google Sheets error:', error);
                
                // Even if Google Sheets fails, we have localStorage backup
                if (savedToLocal) {
                    showNotification('âš ï¸ Server offline, data disimpan lokal. Tetap valid!', 'warning');
                    return { 
                        success: true, 
                        message: 'Data disimpan lokal (server offline)',
                        localBackup: true 
                    };
                }
                
                return { 
                    success: false, 
                    message: 'Gagal mengirim: ' + error.message 
                };
            }
        }

        // =============================================
        // TICKET MODAL FUNCTIONS
        // =============================================
        async function showTicketModal(data) {
            const ticketCode = generateTicketCode();
            const ticketId = generateTicketId();
            const method = data.metode || 'dana';
            
            // Determine status
            let status = 'pending';
            if (method === 'ots') {
                status = 'pending_ots';
            } else if (selectedFile) {
                status = 'uploaded';
            }
            
            // Prepare ticket data
            const ticketData = {
                nama: data.nama,
                telepon: data.telepon,
                email: data.email,
                tiket: data.tiket,
                total: data.total,
                metode: method,
                ticketCode: ticketCode,
                ticketId: ticketId,
                status: status,
                proofFile: selectedFile ? selectedFile.name : 'none'
            };
            
            currentTicketData = ticketData;
            
            // Update modal display
            document.getElementById('ticketName').textContent = ticketData.nama;
            document.getElementById('ticketCodeDisplay').textContent = ticketData.ticketCode;
            document.getElementById('ticketIdDisplay').textContent = `ID: ${ticketData.ticketId}`;
            document.getElementById('ticketQuantity').textContent = ticketData.tiket;
            document.getElementById('paymentMethodDisplay').textContent = getPaymentMethodDisplay(ticketData.metode);
            
            // Set payment status
            const paymentStatus = document.getElementById('paymentStatusDisplay');
            const proofSection = document.getElementById('proofUploadSection');
            const proofInstruction = document.getElementById('proofUploadInstruction');
            
            if (ticketData.metode === 'ots') {
                paymentStatus.innerHTML = '<i class="fas fa-money-bill-wave"></i> Bayar di Tempat';
                proofSection.classList.add('hidden');
                document.getElementById('ticketStatusDesc').textContent = 'Bayar langsung saat registrasi di lokasi acara.';
            } else if (selectedFile) {
                paymentStatus.innerHTML = '<i class="fas fa-clock"></i> Menunggu Verifikasi';
                proofSection.classList.remove('hidden');
                proofSection.classList.add('uploaded');
                document.getElementById('uploadProofBtn').innerHTML = '<i class="fas fa-check"></i> Sudah Diupload';
                document.getElementById('uploadProofBtn').disabled = true;
                proofInstruction.textContent = 'Bukti pembayaran sudah diupload. Tunggu verifikasi dari panitia.';
                document.getElementById('ticketStatusDesc').textContent = 'Tiket menunggu verifikasi pembayaran.';
            } else {
                paymentStatus.innerHTML = '<i class="fas fa-exclamation-circle"></i> Belum Upload Bukti';
                proofSection.classList.remove('hidden');
                proofInstruction.textContent = `Upload screenshot bukti transfer ${getPaymentMethodDisplay(ticketData.metode)} untuk verifikasi.`;
                document.getElementById('ticketStatusDesc').textContent = 'Upload bukti pembayaran terlebih dahulu.';
            }
            
            // Show modal
            const modal = document.getElementById('ticketModal');
            modal.classList.add('active');
            
            // Send data to Google Sheets in background
            setTimeout(async () => {
                try {
                    const saveResult = await sendToGoogleSheets(ticketData);
                    const statusDiv = document.getElementById('ticketStatus');
                    
                    if (saveResult.success) {
                        statusDiv.className = 'status-success status-message';
                        statusDiv.innerHTML = '<i class="fas fa-check-circle"></i> Data berhasil disimpan!';
                        
                        if (saveResult.localBackup) {
                            statusDiv.innerHTML += '<br><small>âš ï¸ Data disimpan lokal (server offline)</small>';
                        }
                    } else {
                        statusDiv.className = 'status-warning status-message';
                        statusDiv.innerHTML = `<i class="fas fa-exclamation-triangle"></i> ${saveResult.message}`;
                    }
                    
                    statusDiv.style.display = 'block';
                    
                } catch (error) {
                    console.error('Error in background save:', error);
                }
            }, 1000);
        }

        // =============================================
        // FORM VALIDATION & SUBMISSION
        // =============================================
        function validateForm() {
            const nama = document.getElementById('nama').value.trim();
            const telepon = document.getElementById('telepon').value.trim();
            const email = document.getElementById('email').value.trim();
            const tiketQty = parseInt(document.getElementById('tiket').value) || 0;
            const method = document.getElementById('metodePembayaran').value;
            
            // Basic validation
            if (!nama) {
                showNotification('Nama lengkap harus diisi!', 'error');
                return false;
            }
            
            if (!telepon) {
                showNotification('Nomor WhatsApp harus diisi!', 'error');
                return false;
            }
            
            const cleanPhone = telepon.replace(/\D/g, '');
            if (cleanPhone.length < 10 || cleanPhone.length > 13) {
                showNotification('Nomor WhatsApp harus 10-13 digit!', 'error');
                return false;
            }
            
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showNotification('Email tidak valid!', 'error');
                return false;
            }
            
            if (tiketQty < 1) {
                showNotification('Minimal 1 tiket!', 'error');
                return false;
            }
            
            // File validation for Dana/BCA
            if (requiresProofUpload && !selectedFile) {
                showNotification('Harap upload bukti pembayaran!', 'error');
                return false;
            }
            
            return true;
        }

        async function handleFormSubmit(e) {
            e.preventDefault();
            
            if (isProcessing) return;
            if (!validateForm()) return;
            
            // Get form data
            const formData = {
                nama: document.getElementById('nama').value.trim(),
                telepon: document.getElementById('telepon').value.trim().replace(/\D/g, ''),
                email: document.getElementById('email').value.trim(),
                tiket: parseInt(document.getElementById('tiket').value) || 1,
                total: document.getElementById('totalHarga').textContent,
                metode: document.getElementById('metodePembayaran').value,
                tanggal: new Date().toLocaleString('id-ID')
            };
            
            // Update hidden fields
            document.getElementById('hiddenTicketCode').value = generateTicketCode();
            document.getElementById('hiddenTimestamp').value = new Date().toISOString();
            
            // Show loading
            showLoading('Menyimpan data pendaftaran...');
            
            try {
                // Show ticket modal
                await showTicketModal(formData);
                
                // Also submit to Netlify (background)
                try {
                    const netlifyForm = document.getElementById('ticketForm');
                    const formDataObj = new FormData(netlifyForm);
                    
                    // Add file to form data if exists
                    if (selectedFile) {
                        formDataObj.append('file', selectedFile);
                    }
                    
                    // Submit to Netlify in background
                    fetch('/', {
                        method: 'POST',
                        body: formDataObj
                    }).then(() => {
                        console.log('âœ… Netlify form submitted');
                    }).catch(netlifyError => {
                        console.warn('âš ï¸ Netlify submit error:', netlifyError);
                    });
                    
                } catch (netlifyError) {
                    console.warn('âš ï¸ Netlify form error:', netlifyError);
                }
                
                // Show success notification
                setTimeout(() => {
                    showNotification('ðŸŽ‰ Pendaftaran berhasil! Tiket telah dibuat.', 'success');
                }, 500);
                
            } catch (error) {
                console.error('âŒ Form submission error:', error);
                showNotification('Terjadi kesalahan. Silakan coba lagi.', 'error');
                
            } finally {
                hideLoading();
            }
        }

        // =============================================
        // EVENT LISTENERS
        // =============================================
        function initEventListeners() {
            // Ticket quantity change
            const tiketInput = document.getElementById('tiket');
            tiketInput.addEventListener('input', function() {
                const qty = parseInt(this.value) || 1;
                const subtotal = qty * HARGA_TIKET;
                
                document.getElementById('subtotal').textContent = formatRupiah(subtotal);
                document.getElementById('totalTiket').textContent = qty;
                document.getElementById('totalHarga').textContent = formatRupiah(subtotal);
                document.getElementById('danaAmount').textContent = formatRupiah(subtotal);
                document.getElementById('hiddenTotalAmount').value = formatRupiah(subtotal);
            });
            
            // Payment method selection
            document.querySelectorAll('.payment-bubble').forEach(bubble => {
                bubble.addEventListener('click', function() {
                    document.querySelectorAll('.payment-bubble').forEach(b => b.classList.remove('selected'));
                    this.classList.add('selected');
                    
                    const method = this.dataset.method;
                    document.getElementById('metodePembayaran').value = method;
                    
                    // Show/hide details
                    document.getElementById('danaDetails').classList.add('hidden');
                    document.getElementById('bcaDetails').classList.add('hidden');
                    document.getElementById('otsDetails').classList.add('hidden');
                    document.getElementById(`${method}Details`).classList.remove('hidden');
                    
                    // Show/hide file upload
                    requiresProofUpload = (method === 'dana' || method === 'bca');
                    const fileContainer = document.getElementById('fileUploadContainer');
                    
                    if (requiresProofUpload) {
                        fileContainer.classList.add('active');
                    } else {
                        fileContainer.classList.remove('active');
                        selectedFile = null;
                        document.getElementById('filePreviewContainer').classList.remove('active');
                        document.getElementById('proofPreview').classList.remove('active');
                        document.getElementById('proofPreview').innerHTML = '';
                    }
                    
                    document.getElementById('paymentDetails').classList.add('active');
                });
            });
            
            // File upload handlers
            document.getElementById('fileUploadBox').addEventListener('click', () => {
                document.getElementById('paymentProof').click();
            });
            
            document.getElementById('paymentProof').addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    handleFileSelect(e.target.files[0]);
                }
            });
            
            document.getElementById('removeFileBtn').addEventListener('click', () => {
                selectedFile = null;
                document.getElementById('paymentProof').value = '';
                document.getElementById('filePreviewContainer').classList.remove('active');
                document.getElementById('proofPreview').classList.remove('active');
                document.getElementById('proofPreview').innerHTML = '';
                showNotification('File telah dihapus', 'warning');
            });
            
            // Copy buttons
            document.querySelectorAll('.copy-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const number = this.dataset.number;
                    let formattedNumber = number;
                    
                    if (number === "7265312047") formattedNumber = "726 531 2047";
                    if (number === "08815566720") formattedNumber = "0881 5566 720";
                    
                    navigator.clipboard.writeText(formattedNumber).then(() => {
                        const original = this.innerHTML;
                        this.innerHTML = '<i class="fas fa-check"></i> Tersalin!';
                        this.style.background = 'linear-gradient(135deg, #00a86b, #00d48e)';
                        
                        setTimeout(() => {
                            this.innerHTML = original;
                            this.style.background = '';
                        }, 2000);
                    });
                });
            });
            
            // Form submission
            document.getElementById('ticketForm').addEventListener('submit', handleFormSubmit);
            
            // Modal controls
            document.getElementById('closeTicket').addEventListener('click', () => {
                document.getElementById('ticketModal').classList.remove('active');
            });
            
            document.getElementById('ticketModal').addEventListener('click', (e) => {
                if (e.target === document.getElementById('ticketModal')) {
                    document.getElementById('ticketModal').classList.remove('active');
                }
            });
            
            // Ticket actions
            document.getElementById('downloadTicket').addEventListener('click', function() {
                showNotification('Fitur download akan datang. Silakan screenshot manual.', 'info');
            });
            
            document.getElementById('shareTicket').addEventListener('click', function() {
                const ticketData = {
                    title: 'E-Ticket Kilas Balik Masa',
                    text: `Saya sudah dapat tiket Kilas Balik Masa! ðŸŽ«\nKode: ${document.getElementById('ticketCodeDisplay').textContent}`,
                    url: window.location.href
                };
                
                if (navigator.share) {
                    navigator.share(ticketData);
                } else {
                    showNotification('Share tidak tersedia di browser ini.', 'info');
                }
            });
            
            // Upload proof in modal
            document.getElementById('uploadProofBtn').addEventListener('click', async function() {
                if (!selectedFile) {
                    document.getElementById('proofFileInput').click();
                    return;
                }
                
                const btn = this;
                const originalText = btn.innerHTML;
                
                try {
                    btn.disabled = true;
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mengupload...';
                    
                    const statusDiv = document.getElementById('proofUploadStatus');
                    statusDiv.className = 'status-info status-message';
                    statusDiv.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mengupload bukti...';
                    statusDiv.style.display = 'block';
                    
                    // Simulate progress
                    const progressFill = document.getElementById('progressFill');
                    const progressPercentage = document.getElementById('progressPercentage');
                    let progress = 0;
                    const progressInterval = setInterval(() => {
                        progress += 10;
                        if (progress > 90) clearInterval(progressInterval);
                        progressFill.style.width = progress + '%';
                        progressPercentage.textContent = progress + '%';
                    }, 200);
                    
                    // Send to Google Sheets
                    const result = await sendToGoogleSheets(currentTicketData);
                    
                    clearInterval(progressInterval);
                    progressFill.style.width = '100%';
                    progressPercentage.textContent = '100%';
                    
                    if (result.success) {
                        // Update UI
                        document.getElementById('paymentStatusDisplay').innerHTML = '<i class="fas fa-clock"></i> Menunggu Verifikasi';
                        document.getElementById('proofUploadSection').classList.add('uploaded');
                        btn.innerHTML = '<i class="fas fa-check"></i> Sudah Diupload';
                        
                        statusDiv.className = 'status-success status-message';
                        statusDiv.innerHTML = '<i class="fas fa-check-circle"></i> Bukti berhasil diupload!';
                        
                        showNotification('âœ… Bukti pembayaran berhasil diupload!', 'success');
                    } else {
                        throw new Error(result.message);
                    }
                    
                } catch (error) {
                    console.error('Upload error:', error);
                    const statusDiv = document.getElementById('proofUploadStatus');
                    statusDiv.className = 'status-error status-message';
                    statusDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> Gagal: ${error.message}`;
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                    showNotification('Gagal upload bukti', 'error');
                }
            });
            
            document.getElementById('proofFileInput').addEventListener('change', function(e) {
                if (e.target.files.length > 0) {
                    handleFileSelect(e.target.files[0]);
                }
            });
            
            // Social share buttons
            document.getElementById('shareInstagram').addEventListener('click', function() {
                const caption = `ðŸŽ« BARU DAFTAR KILAS BALIK MASA! ðŸŽ«\n\nSudah dapat tiket untuk acara Kilas Balik Masa SMA Hangtuah 5 Sidoarjo!\n\nKode Tiket: ${document.getElementById('ticketCodeDisplay').textContent}\nTanggal: 24 Januari 2026\nLokasi: SMA Hangtuah 5 Sidoarjo\n\nFollow: @kopi_basi\n#KilasBalikMasa #SMAHangtuah5`;
                
                navigator.clipboard.writeText(caption).then(() => {
                    showNotification('Caption disalin! Buka Instagram dan paste.', 'success');
                    setTimeout(() => window.open(INSTAGRAM_URL, '_blank'), 1500);
                });
            });
            
            document.getElementById('shareWhatsApp').addEventListener('click', function() {
                const message = `*ðŸŽ« KILAS BALIK MASA - TIKET TERBIT! ðŸŽ«*\n\nSaya baru saja mendaftar acara *Kilas Balik Masa* SMA Hangtuah 5 Sidoarjo!\n\n*Detail Tiket:*\nâ€¢ Kode: ${document.getElementById('ticketCodeDisplay').textContent}\nâ€¢ Tanggal: 24 Januari 2026\nâ€¢ Waktu: 07.30 WIB\nâ€¢ Lokasi: SMA Hangtuah 5 Sidoarjo\n\nFollow Instagram acara: ${INSTAGRAM_HANDLE}`;
                
                window.open(`https://wa.me/?text=${encodeURIComponent(message)}`, '_blank');
            });
        }

        // =============================================
        // TEST CONNECTION
        // =============================================
        async function testConnection() {
            showLoading('Menguji koneksi server...');
            
            try {
                // Test CORS preflight
                const response = await fetch(GOOGLE_SCRIPT_URL, {
                    method: 'OPTIONS',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                hideLoading();
                
                if (response.ok) {
                    showNotification('âœ… Server aktif dan mendukung CORS!', 'success');
                } else {
                    showNotification('âš ï¸ Server merespons dengan status: ' + response.status, 'warning');
                }
                
            } catch (error) {
                hideLoading();
                showNotification('âŒ Gagal terhubung ke server: ' + error.message, 'error');
            }
        }

        // =============================================
        // INITIALIZATION
        // =============================================
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize form
            const tiketInput = document.getElementById('tiket');
            const subtotal = parseInt(tiketInput.value) * HARGA_TIKET;
            document.getElementById('subtotal').textContent = formatRupiah(subtotal);
            document.getElementById('totalHarga').textContent = formatRupiah(subtotal);
            document.getElementById('danaAmount').textContent = formatRupiah(subtotal);
            
            // Set default payment method
            document.getElementById('paymentDetails').classList.add('active');
            document.getElementById('fileUploadContainer').classList.add('active');
            requiresProofUpload = true;
            
            // Set timestamp
            document.getElementById('hiddenTimestamp').value = new Date().toISOString();
            
            // Initialize event listeners
            initEventListeners();
            
            // Fade in animations
            setTimeout(() => {
                document.querySelectorAll('.fade-in').forEach((el, i) => {
                    setTimeout(() => {
                        el.style.opacity = '1';
                        el.style.transform = 'translateY(0)';
                    }, i * 200);
                });
            }, 300);
            
            // Set Open Graph URL
            const metaOgUrl = document.querySelector('meta[property="og:url"]');
            if (metaOgUrl) {
                metaOgUrl.setAttribute('content', window.location.href);
            }
            
            // Check for backup data
            const backupCount = getBackupCount();
            if (backupCount > 0) {
                console.log(`ðŸ“ Backup data ditemukan: ${backupCount} tiket`);
            }
            
            // Auto-test connection on load (optional)
            // setTimeout(testConnection, 1000);
            
            console.log('âœ… Sistem Kilas Balik Masa siap digunakan!');
        });

        // =============================================
        // GLOBAL ERROR HANDLING
        // =============================================
        window.addEventListener('error', function(e) {
            console.error('Global error:', e.error);
            showNotification('Terjadi kesalahan teknis. Silakan refresh halaman.', 'error');
        });

        window.addEventListener('unhandledrejection', function(e) {
            console.error('Unhandled promise rejection:', e.reason);
            showNotification('Terjadi kesalahan. Silakan coba lagi.', 'error');
        });
    </script>
</body>
</html>
